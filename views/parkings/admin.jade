        .parkings
            .row
                .col-md-12
                    .panel.panel-default
                        .panel-heading Listado de Parkings
                        .panel-body
                                .col-md-12
                                    table.table.table-striped
                                        tr
                                            th Nombre
                                            th Ubicaci√≥n
                                            th Plazas 
                                            th
                                        
                                            tr(ng-repeat="p in parkings")
